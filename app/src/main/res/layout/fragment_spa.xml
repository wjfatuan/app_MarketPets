<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/barra_abajo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_bar"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:background="@color/purple">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Volver atrás"
                android:scaleType="center"
                android:src="@drawable/ic_arrow_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="186dp"
                android:layout_marginBottom="18dp"
                android:fontFamily="@font/raleway_bold"
                android:text="Spa"
                android:textColor="@color/curuba"
                android:textSize="40sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="62dp"
                android:layout_height="51dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="52dp"
                app:srcCompat="@drawable/shopping" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="221dp"
            app:srcCompat="@drawable/imagen_spa" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp">

                        <ImageView
                            android:id="@+id/imageJuana"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginEnd="16dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/haircut" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/titleJuana"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:fontFamily="@font/raleway_bold"
                                android:maxLines="1"
                                android:text="Peluquería "
                                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6" />

                            <TextView
                                android:id="@+id/durationJuana"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:fontFamily="@font/raleway_regular"
                                android:text="Los mejores cortes para tu mascota, con dedicación y cuidado, la seguridad y tranquilidad de tu peludo es nuestra prioridad."
                                android:textAppearance="@style/TextAppearance.MaterialComponents.Caption" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp">

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btnAgregarPeluqueria"
                                    android:layout_width="wrap_content"
                                    android:layout_height="48dp"
                                    android:layout_alignParentEnd="true"
                                    android:minWidth="120dp"
                                    android:text="@string/agregar"
                                    android:textColor="@color/white"
                                    android:textSize="14sp"
                                    android:paddingStart="16dp"
                                    android:paddingEnd="16dp"
                                    android:insetTop="0dp"
                                    android:insetBottom="0dp"
                                    app:backgroundTint="#FD4760"
                                    app:cornerRadius="20dp"
                                    app:elevation="2dp" />
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp">

                        <ImageView
                            android:id="@+id/imageSantiago"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginEnd="16dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/tooth" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/titleSantiago"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:fontFamily="@font/raleway_bold"
                                android:maxLines="1"
                                android:text="Profilaxis y Cuidado dental"
                                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6" />

                            <TextView
                                android:id="@+id/durationSantiago"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:fontFamily="@font/raleway_regular"
                                android:text="Mantener una buena higiene oral en tu peludito, evita que enfermedades que se derivan de una mala higiene, haz que su salud sea primero."
                                android:textAppearance="@style/TextAppearance.MaterialComponents.Caption" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp">

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btnAgregarProfilaxis"
                                    android:layout_width="wrap_content"
                                    android:layout_height="48dp"
                                    android:layout_alignParentEnd="true"
                                    android:minWidth="120dp"
                                    android:text="@string/agregar"
                                    android:textColor="@color/white"
                                    android:textSize="14sp"
                                    android:paddingStart="16dp"
                                    android:paddingEnd="16dp"
                                    android:insetTop="0dp"
                                    android:insetBottom="0dp"
                                    app:backgroundTint="#5E478D"
                                    app:cornerRadius="20dp"
                                    app:elevation="2dp" />
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp">

                        <ImageView
                            android:id="@+id/imageLucas"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginEnd="16dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/dog__1_" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/titleLucas"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:fontFamily="@font/raleway_bold"
                                android:maxLines="1"
                                android:text="Acupuntura y psicoterapia"
                                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6" />

                            <TextView
                                android:id="@+id/durationLucas"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:fontFamily="@font/raleway_regular"
                                android:text="Nuestro servicio terapéutico esta enfocado en las necesidades de tu peludito, Pensando en su bienestar físico y psicológico, siempre con ellos."
                                android:textAppearance="@style/TextAppearance.MaterialComponents.Caption" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp">

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btnAgregarAcupuntura"
                                    android:layout_width="wrap_content"
                                    android:layout_height="48dp"
                                    android:layout_alignParentEnd="true"
                                    android:minWidth="120dp"
                                    android:text="@string/agregar"
                                    android:textColor="@color/white"
                                    android:textSize="14sp"
                                    android:paddingStart="16dp"
                                    android:paddingEnd="16dp"
                                    android:insetTop="0dp"
                                    android:insetBottom="0dp"
                                    app:backgroundTint="#FFC107"
                                    app:cornerRadius="20dp"
                                    app:elevation="2dp" />
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>